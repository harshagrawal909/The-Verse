# 1. Database Connection (CRITICAL)
MONGO_URI="mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority"

# 2. JWT Secrets (CRITICAL for Custom Auth)
JWT_SECRET="YOUR_LONG_AND_RANDOM_SECRET" 
NEXTAUTH_SECRET="ANOTHER_LONG_AND_RANDOM_SECRET"

# 3. Vercel Blob Storage (for image uploads)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# 4. NextAuth OAuth Providers (Optional, but required for social login)
# Use your public Vercel domain when deploying.
NEXTAUTH_URL="http://localhost:3000" 

GOOGLE_CLIENT_ID="..."
GOOGLE_CLIENT_SECRET="..."
FACEBOOK_CLIENT_ID="..."
FACEBOOK_CLIENT_SECRET="..."
